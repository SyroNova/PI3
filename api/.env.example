# Server
PORT=3000
NODE_ENV=development

# Database
MYSQLHOST=
MYSQLPORT=
MYSQLUSER=
MYSQLPASSWORD=
MYSQLDATABASE=

# JWT
JWT_SECRET=REPLACE_WITH_RANDOM_SECRET_256_BITS
JWT_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
MAIL_FROM=ElectroMed <no-reply@electromed.local>

# Optional: use SMTP URL instead of individual vars
# SMTP_URL=smtp://user:pass@smtp.example.com:587

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
